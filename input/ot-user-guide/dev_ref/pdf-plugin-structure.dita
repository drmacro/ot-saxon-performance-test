    <section id="index_configuration_the_common_index_folder" class="- topic/section " xtrf="file:/Users/ekimber/workspace-ditaot/dita-ot-2.x/src/main/docsrc/dev_ref/pdf-plugin-structure.dita" xtrc="section:2;59:63">
